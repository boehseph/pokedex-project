<div class="profile-container">
    <div class="profile-content">
        <h1>{{username}}'s Pokedex</h1>
        
        {{#if pokemonCards.length}}
            <div class="pokedex-row">
                {{#each pokemonCards}}
                    <div class="pokedex-card">
                        <img src="{{this.images.small}}" alt="{{this.name}}" />
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p class="empty-pokedex">Your Pokedex is empty. Search for Pokemon and add them to your collection!</p>
        {{/if}}
    </div>
</div>
